<html lang="en">
    <%- include('layouts/header.ejs') %>

    <!--head -->
    
<link rel="stylesheet" type="text/css" href="home.css">

<body ng-app="bookApp" ng-controller="BookController">
    
    <header class="sticky">
    <!--nav -->
    <%- include('layouts/nav.ejs') %>
        <h1>Welcome!</h1>
        <center>
            <p><span2>Let's expand your mind by reading books!</span2></p>
        </center>
    
            <div id="bookshelf" class="animated-bookshelf">
                <div ng-repeat="book in books" class="book" ng-click="showBookDetails(book)">
                    <img ng-src="{{book.thumbnail}}" alt="{{book.title}} Cover">
                    <h3>{{book.title}}</h3>
                </div>
            </div>
    
            <div id="overlay" class="overlay" ng-show="selectedBook">
                <div class="overlay-content">
                    <img ng-src="{{selectedBook.thumbnail}}" alt="{{selectedBook.title}} Cover">
                    <h3>{{selectedBook.title}}</h3>
                    <p>{{selectedBook.description}}</p>
                    <button ng-click="hideBookDetails()">X</button>
                </div>
            </div>
    
            <script src="homee.js"></script>
    
        
            <!--About-->
    <section class="about" id="about">
        <h1 class="heading"><span>About</span> Us </h1>
        <div class="row">
            
            <div class="content"></div>
            <h3><i>"What is <span2>PagePetal Store?"</span2></i></h3>
            <p>
                <b><span2>PagePetal Store</span2></b> adalah salah satu online Bookstore
                    yang menjual berbagai macam novel dengan genre yang berbeda-beda
                    seperti romance, fiksi, fantasy, fan fiction, mystery, comedy, dll.

                </p></center>
            <a href="ourBooks.ejs" class="action-btn">More Info</a>
            </div>
        
    </section>

    <!--Contact us-->
    <!--footer -->
    
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
<%- include('layouts/footer.ejs') %>
</html>